<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="produit_form_view" model="ir.ui.view">
            <field name="name">produit.form.view</field>
            <field name="model">stock.produits</field>
            <field name="arch" type="xml">
                <form class="custom-form">
                    <sheet>

                        <group string="Informations de base">
                            <group> <field name="name"/>
                                <field name="barcode"/>
                            </group>
                            <group> <field name="reference" readonly="1"/>
                            </group>
                        </group>

                        <group string="DÃ©tails de l'inventaire">
                            <group> <field name="categorie_id"/>
                                <field name="fournisseur_id"/>
                            </group>
                            <group> <field name="emplacement_id"/>
                                <field name="quantity"/>
                            </group>
                        </group>

                        <button name="%(custom_module.report_stock_produit)d"
                            string="Imprimer le Rapport"
                            type="action"
                            class="custom-button"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="produit_list_view" model="ir.ui.view">
            <field name="name">produit.list.view</field>
            <field name="model">stock.produits</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="reference"/>
                    <field name="quantity"/>
                </list>
            </field>
        </record>

        <record id="produit_action" model="ir.actions.act_window">
            <field name="name">Produits</field>
            <field name="res_model">stock.produits</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>